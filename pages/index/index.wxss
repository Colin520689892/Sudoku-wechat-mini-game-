.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.sudoku-board {
  display: flex;
  flex-direction: column;
  border: 2px solid #000;
}

.row {
  display: flex;
}

.cell {
  width: 40px;
  height: 40px;
  text-align: center;
  border: 1px solid #ccc;
  font-size: 18px;
}

.cell.fixed {
  background-color: #f0f0f0;
}

button {
  margin-top: 20px;
}