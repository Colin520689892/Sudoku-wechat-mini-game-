.waibiankuang {
	width: 690rpx;
	height: 690rpx;
	border: 5rpx solid black;
	margin: 20rpx auto;
	display: grid;
	grid-template-columns: repeat(9, 1fr);
	grid-template-rows: repeat(9, 1fr);
	border-collapse: collapse;
}

