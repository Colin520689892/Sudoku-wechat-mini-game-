/* pages/shouye/shouye.wxss */
/* 在 .wxss 文件中 */
.button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}

.sudoku-title {
  font-size: 48rpx;
  color: #2c3e50;
  font-weight: bold;
  margin-bottom: 80rpx;
}

.menu-button {
  width: 450rpx;
  height: 120rpx;
  background: #2873e4;
  border-radius: 120rpx;
  font-size: 36rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 200rpx;
  box-shadow: 0 15rpx 30rpx rgba(52,152,219,0.3);
  transition: all 0.2s;
}
.menu-button1 {
  width: 450rpx;
  height: 120rpx;
  background: #f2f3f5;
  border-radius: 120rpx;
  font-size: 36rpx;
  color: #2873e4;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
  box-shadow: 0 15rpx 30rpx rgba(56, 134, 207, 0.3);
  transition: all 0.2s;
}

/* 按钮按压效果 */
.menu-button:active {
  transform: scale(0.98);
  background: #2980b9;
}

/* 在 .wxss 文件中 */
/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

/* 弹窗主体 */
.dialog-box {
  width: 600rpx;
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.2);
}

/* 弹窗标题 */
.dialog-title {
  font-size: 40rpx;
  color: #2c3e50;
  text-align: center;
  font-weight: bold;
  margin-bottom: 40rpx;
}

/* 难度选项 */
.difficulty-item {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  color: #3498db;
  border-bottom: 1rpx solid #eee;
  transition: all 0.2s;
}

.difficulty-item:active {
  background: #f8f9fa;
}

.difficulty-item:last-child {
  border-bottom: none;
}